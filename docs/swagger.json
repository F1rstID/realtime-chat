{
    "swagger": "2.0",
    "info": {
        "description": "실시간 채팅을 위한 RESTful API 서버입니다.",
        "title": "Realtime Chat API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
            "email": "support@swagger.io"
        },
